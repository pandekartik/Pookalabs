---
import Cards from "../components/Cards.astro";
import projects from "../data/projects.json";

const { tag } = Astro.props
const filteredProjects = projects.filter(project => project.tags.includes(tag)); 
---

<div class="grid grid-cols-1 gap-x-4 gap-y-8 justify-items-strech items-strech md:grid-cols-2 lg:grid-cols-3">
    {filteredProjects.map((project)=>(
        <Cards heading={project.heading} body={project.body} imageUrl={project.imageUrl} url={project.url} />
    ))}
</div>